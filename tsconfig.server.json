{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "jsx": "preserve",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2015",
    "lib": [
      "dom",
      "es6",
      "es7"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    ".next"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    "**/**/**/**/*.ts",
    "**/**/**/**/**/*.ts",
    "**/**/**/**/**/**/*.ts",
    "**/*.tsx",
    "**/**/*.tsx",
    "**/**/**/*.tsx",
    "**/**/**/**/*.tsx",
    "**/**/**/**/**/*.tsx",
    "**/**/**/**/**/**/*.tsx",
  ]
}
